<common:WindowBase
	x:Class="ElectronicObserver.Window.Dialog.EquipmentSelector.EquipmentSelectorWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:common="clr-namespace:ElectronicObserver.Common"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:equipmentSelector="clr-namespace:ElectronicObserver.Avalonia.Dialogs.EquipmentSelector;assembly=ElectronicObserver.Avalonia"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Dialog.EquipmentSelector"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="http://schemas.modernwpf.com/2019"
	x:Name="EquipmentSelector"
	Title="{x:Static equipmentSelector:EquipmentSelectorResources.EquipmentPicker}"
	Width="800"
	Height="450"
	ui:WindowHelper.UseModernWindowStyle="True"
	x:TypeArguments="equipmentSelector:EquipmentSelectorViewModel"
	mc:Ignorable="d"
	>
	<ContentControl Content="{Binding WpfAvaloniaHost, ElementName=EquipmentSelector}" />
</common:WindowBase>
