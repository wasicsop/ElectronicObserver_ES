             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="180">
    <Border Background="#212121" CornerRadius="4" Margin="2" Padding="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label x:Name="ShipTypeGroupLabel" Height="auto" HorizontalContentAlignment="Center"/>
			<WrapPanel x:Name="ShipClassContainer" Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Center">
		
            </WrapPanel>
        </Grid>
    </Border>
</UserControl>
