<common:WindowBase
	x:Class="ElectronicObserver.Window.Dialog.ShipSelector.ShipSelectorWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:common="clr-namespace:ElectronicObserver.Common"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:shipSelector="clr-namespace:ElectronicObserver.Avalonia.Dialogs.ShipSelector;assembly=ElectronicObserver.Avalonia"
	xmlns:ui="http://schemas.modernwpf.com/2019"
	x:Name="ShipSelector"
	Title="{x:Static shipSelector:ShipSelectorResources.ShipPicker}"
	Width="800"
	Height="450"
	ui:WindowHelper.UseModernWindowStyle="True"
	x:TypeArguments="shipSelector:ShipSelectorViewModel"
	mc:Ignorable="d"
	>
	<ContentControl Content="{Binding WpfAvaloniaHost, ElementName=ShipSelector}" />
</common:WindowBase>